// Prisma schema for the LMS Platform using PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================================
// ENUMS
// =========================================================================
enum UserRole {
  BUSINESS_OWNER
  LECTURER
  STUDENT
}

enum OrganizationPlan {
  FREE
  PRO
  GROWTH
  ENTERPRISE
}

enum OrganizationStatus {
  ACTIVE
  PAUSED
  SUSPENDED
}

enum OrganizationRole {
  OWNER
  ADMIN
  INSTRUCTOR
  REVIEWER
  LEARNER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum CoursePlanVisibility {
  PRIVATE
  ORGANIZATION
  PUBLIC
}

enum CourseGroupType {
  STUDY
  DISCUSSION
  PROJECT
  CUSTOM
}

enum CourseInstructorRole {
  OWNER
  LEAD_INSTRUCTOR
  INSTRUCTOR
  TA
  REVIEWER
}

enum CohortStatus {
  PLANNED
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  ESSAY
}

// =========================================================================
// CORE MODELS
// =========================================================================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile                    UserProfile?
  organizationMemberships    OrganizationMembership[]
  ownedOrganizations         Organization[]           @relation("OrganizationOwner")
  invitedOrganizationMembers OrganizationMembership[] @relation("OrganizationInviter")
  lecturerCourses            Course[]                 @relation("CourseLecturer")
  courseInstructors          CourseInstructor[]       @relation("CourseInstructorMember")
  courseInstructorInvites    CourseInstructor[]       @relation("CourseInstructorInvitedBy")
  enrollments                Enrollment[]
  submissions                QuizSubmission[]
  cohortEnrollments          CohortEnrollment[]
  coursePlans                CoursePlan[]
  coursePlanCourses          CoursePlanCourse[]
  courseGroups               CourseGroup[]
  courseGroupMemberships     CourseGroupMembership[]
  courses                    Course[]

  @@index([role])
  @@index([isActive])
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  bio         String?
  avatar      String?
  phone       String?
  dateOfBirth DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Organization {
  id             String             @id @default(cuid())
  name           String
  slug           String             @unique
  description    String?
  logoUrl        String?
  primaryColor   String?
  secondaryColor String?
  timezone       String?            @default("UTC")
  locale         String?            @default("en")
  plan           OrganizationPlan   @default(FREE)
  status         OrganizationStatus @default(ACTIVE)
  metadata       Json?
  ownerId        String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  // Relations
  owner             User                     @relation("OrganizationOwner", fields: [ownerId], references: [id])
  memberships       OrganizationMembership[]
  courses           Course[]
  cohorts           Cohort[]
  courseInstructors CourseInstructor[]
  coursePlans       CoursePlan[]
  subCourses        SubCourse[]
  lessons           Lesson[]
  courseGroups      CourseGroup[]
  quizzes           Quiz[]
  quizSubmissions   QuizSubmission[]
  enrollments       Enrollment[]
  lessonProgresses  LessonProgress[]

  @@index([plan])
  @@index([status])
  @@index([ownerId])
}

model OrganizationMembership {
  id               String           @id @default(cuid())
  organizationId   String
  userId           String?
  role             OrganizationRole @default(LEARNER)
  invitationEmail  String?
  invitationStatus InvitationStatus @default(PENDING)
  invitedById      String?
  joinedAt         DateTime?
  metadata         Json?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id])
  invitedBy    User?        @relation("OrganizationInviter", fields: [invitedById], references: [id])

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([invitationEmail])
}

// =========================================================================
// COURSE STRUCTURE
// =========================================================================
model Course {
  id             String      @id @default(cuid())
  organizationId String
  lecturerId     String
  title          String      @db.VarChar(200)
  description    String      @db.VarChar(2000)
  isPublished    Boolean     @default(false)
  thumbnail      String?
  price          Float?
  duration       Int? // in minutes
  level          CourseLevel
  category       String?     @db.VarChar(100)
  tags           String[]
  metadata       Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  organization      Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  lecturer          User               @relation("CourseLecturer", fields: [lecturerId], references: [id])
  courseInstructors CourseInstructor[]
  subCourses        SubCourse[]
  lessons           Lesson[]
  enrollments       Enrollment[]
  quizzes           Quiz[]
  cohorts           Cohort[]
  plans             CoursePlanCourse[]
  groups            CourseGroup[]
  user              User?              @relation(fields: [userId], references: [id])
  userId            String?

  @@index([organizationId])
  @@index([lecturerId])
  @@index([isPublished])
  @@index([level])
  @@index([category])
  @@index([tags])
  @@index([createdAt(sort: Desc)])
  @@index([organizationId, isPublished])
  @@index([organizationId, level, isPublished])
}

model CoursePlan {
  id             String               @id @default(cuid())
  organizationId String
  ownerId        String?
  name           String               @db.VarChar(200)
  slug           String               @unique
  description    String?              @db.VarChar(1000)
  visibility     CoursePlanVisibility @default(PRIVATE)
  isPublished    Boolean              @default(false)
  price          Float?
  tags           String[]
  metadata       Json?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  // Relations
  organization Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  owner        User?              @relation(fields: [ownerId], references: [id])
  courses      CoursePlanCourse[]

  @@index([organizationId])
  @@index([ownerId])
  @@index([visibility])
}

model CoursePlanCourse {
  id        String   @id @default(cuid())
  planId    String
  courseId  String
  addedById String?
  addedAt   DateTime @default(now())

  // Relations
  plan    CoursePlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  course  Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  addedBy User?      @relation(fields: [addedById], references: [id])

  @@unique([planId, courseId])
  @@index([courseId])
}

model CourseInstructor {
  id             String               @id @default(cuid())
  courseId       String
  organizationId String
  userId         String
  role           CourseInstructorRole @default(INSTRUCTOR)
  invitedById    String?
  permissions    Json?
  addedAt        DateTime             @default(now())
  removedAt      DateTime?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  // Relations
  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation("CourseInstructorMember", fields: [userId], references: [id])
  invitedBy    User?        @relation("CourseInstructorInvitedBy", fields: [invitedById], references: [id])

  @@unique([courseId, userId])
  @@index([organizationId])
  @@index([role])
}

model SubCourse {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  description    String   @db.VarChar(2000)
  courseId       String
  order          Int
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons      Lesson[]

  @@index([courseId, order])
  @@index([organizationId])
  @@index([isPublished])
}

model Lesson {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  content        String
  videoUrl       String?
  attachments    String[]
  courseId       String?
  subCourseId    String?
  order          Int
  duration       Int?
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course?          @relation(fields: [courseId], references: [id], onDelete: Cascade)
  subCourse    SubCourse?       @relation(fields: [subCourseId], references: [id], onDelete: Cascade)
  progress     LessonProgress[]

  @@index([courseId, order])
  @@index([subCourseId, order])
  @@index([organizationId])
  @@index([isPublished])
}

model CourseGroup {
  id             String          @id @default(cuid())
  organizationId String
  courseId       String
  name           String          @db.VarChar(200)
  description    String?         @db.VarChar(1000)
  type           CourseGroupType @default(STUDY)
  isDefault      Boolean         @default(false)
  createdById    String?
  metadata       Json?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  // Relations
  organization Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course                  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdBy    User?                   @relation(fields: [createdById], references: [id])
  memberships  CourseGroupMembership[]

  @@index([organizationId])
  @@index([courseId])
  @@index([type])
}

model CourseGroupMembership {
  id           String   @id @default(cuid())
  groupId      String
  enrollmentId String
  studentId    String
  isLeader     Boolean  @default(false)
  joinedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  group      CourseGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  enrollment Enrollment  @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  student    User        @relation(fields: [studentId], references: [id])

  @@unique([groupId, studentId])
  @@index([enrollmentId])
  @@index([studentId])
}

// =========================================================================
// LEARNING EXPERIENCES
// =========================================================================
model Quiz {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  description    String   @db.VarChar(1000)
  courseId       String
  timeLimit      Int?
  maxAttempts    Int      @default(1)
  passingScore   Int      @default(70)
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  questions    Question[]
  submissions  QuizSubmission[]

  @@index([courseId])
  @@index([organizationId])
  @@index([isPublished])
  @@index([createdAt(sort: Desc)])
  @@index([organizationId, courseId, isPublished])
}

model Question {
  id            String       @id @default(cuid())
  quizId        String
  type          QuestionType
  question      String       @db.VarChar(1000)
  options       String[]
  correctAnswer String
  explanation   String?      @db.VarChar(1000)
  points        Int          @default(1)
  order         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId, order])
}

model QuizSubmission {
  id             String   @id @default(cuid())
  organizationId String
  quizId         String
  studentId      String
  answers        Json
  score          Float
  totalPoints    Float
  isPassed       Boolean
  timeSpent      Int
  submittedAt    DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  quiz         Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student      User         @relation(fields: [studentId], references: [id])

  @@index([quizId, studentId])
  @@index([studentId, submittedAt(sort: Desc)])
  @@index([quizId, submittedAt(sort: Desc)])
  @@index([studentId, isPassed])
  @@index([organizationId])
}

model Enrollment {
  id             String    @id @default(cuid())
  organizationId String
  studentId      String
  courseId       String
  cohortId       String?
  enrolledAt     DateTime  @default(now())
  progress       Int       @default(0)
  completedAt    DateTime?
  lastAccessedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  organization           Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  student                User                    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course                 Course                  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  cohort                 Cohort?                 @relation(fields: [cohortId], references: [id])
  progressTracking       LessonProgress[]
  cohortEnrollment       CohortEnrollment?
  courseGroupMemberships CourseGroupMembership[]

  @@unique([studentId, courseId])
  @@index([organizationId])
  @@index([studentId])
  @@index([courseId])
  @@index([cohortId])
  @@index([enrolledAt(sort: Desc)])
  @@index([lastAccessedAt(sort: Desc)])
  @@index([progress])
  @@index([organizationId, studentId, progress])
  @@index([organizationId, courseId, enrolledAt(sort: Desc)])
}

model LessonProgress {
  id             String    @id @default(cuid())
  organizationId String
  enrollmentId   String
  lessonId       String
  isCompleted    Boolean   @default(false)
  timeSpent      Int       @default(0)
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  enrollment   Enrollment   @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  lesson       Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([enrollmentId, lessonId])
  @@index([organizationId])
  @@index([enrollmentId])
  @@index([lessonId])
  @@index([isCompleted])
  @@index([completedAt(sort: Desc)])
  @@index([enrollmentId, isCompleted])
}

model Cohort {
  id              String       @id @default(cuid())
  organizationId  String
  courseId        String
  name            String
  description     String?
  startDate       DateTime?
  endDate         DateTime?
  enrollmentLimit Int?
  status          CohortStatus @default(PLANNED)
  timezone        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  organization      Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course            Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  cohortMemberships CohortEnrollment[]
  enrollments       Enrollment[]

  @@index([organizationId])
  @@index([courseId])
  @@index([status])
}

model CohortEnrollment {
  id           String   @id @default(cuid())
  cohortId     String
  enrollmentId String   @unique
  studentId    String
  joinedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  cohort     Cohort     @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id])

  @@unique([cohortId, studentId])
  @@index([cohortId])
  @@index([studentId])
}

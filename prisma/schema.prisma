// Prisma schema for the LMS Platform using PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================================
// ENUMS
// =========================================================================
enum UserRole {
  BUSINESS_OWNER
  LECTURER
  STUDENT
}

enum OrganizationMemberRole {
  OWNER
  ADMIN
  LECTURER
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum CourseStatus {
  DRAFT // Course is being created/edited
  ACTIVE // Course is live and available
  DISABLED // Course is temporarily disabled by owner
  ARCHIVED // Course is no longer active but kept for records
}

enum CoursePlanVisibility {
  PRIVATE
  ORGANIZATION
  PUBLIC
}

enum CourseGroupType {
  STUDY
  DISCUSSION
  PROJECT
  CUSTOM
}

enum CourseInstructorRole {
  OWNER
  LEAD_INSTRUCTOR
  INSTRUCTOR
  TA
  REVIEWER
}

enum CohortStatus {
  PLANNED
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  ESSAY
}

// =========================================================================
// CORE MODELS
// =========================================================================
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?
  name          String
  emailVerified Boolean  @default(false)
  role          UserRole @default(STUDENT)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  profile                    UserProfile?
  organizationMemberships    OrganizationMembership[]
  ownedOrganizations         Organization[]           @relation("OrganizationOwner")
  invitedOrganizationMembers OrganizationMembership[] @relation("OrganizationInviter")
  lecturerCourses            Course[]                 @relation("CourseLecturer")
  courseInstructors          CourseInstructor[]       @relation("CourseInstructorMember")
  courseInstructorInvites    CourseInstructor[]       @relation("CourseInstructorInvitedBy")
  enrollments                Enrollment[]
  submissions                QuizSubmission[]
  cohortEnrollments          CohortEnrollment[]
  coursePlans                CoursePlan[]
  coursePlanCourses          CoursePlanCourse[]
  courseGroups               CourseGroup[]
  courseGroupMemberships     CourseGroupMembership[]
  courses                    Course[]
  accounts                   Account[]
  sessions                   Session[]
  verifications              Verification[]

  @@index([role])
  @@index([isActive])
}

model Account {
  id                   String    @id @default(cuid())
  userId               String
  providerId           String
  accountId            String?
  password             String?
  accessToken          String?
  refreshToken         String?
  idToken              String?
  accessTokenExpiresAt DateTime?
  scope                String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@unique([userId, providerId])
  @@index([userId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  token      String    @unique
  type       String
  expiresAt  DateTime
  userId     String?
  createdAt  DateTime  @default(now())
  consumedAt DateTime?

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([identifier, type])
}

model UserProfile {
  id          String    @id @default(cuid())
  userId      String    @unique
  bio         String?
  avatar      String?
  phone       String?
  dateOfBirth DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner             User                     @relation("OrganizationOwner", fields: [ownerId], references: [id])
  memberships       OrganizationMembership[]
  courses           Course[]
  coursePlans       CoursePlan[]
  courseInstructors CourseInstructor[]
  subCourses        SubCourse[]
  lessons           Lesson[]
  courseGroups      CourseGroup[]
  quizzes           Quiz[]
  quizSubmissions   QuizSubmission[]
  enrollments       Enrollment[]
  lessonProgresses  LessonProgress[]
  cohorts           Cohort[]

  @@index([ownerId])
}

model OrganizationMembership {
  id             String                 @id @default(cuid())
  organizationId String
  userId         String
  role           OrganizationMemberRole @default(LECTURER)
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id])

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
}

// =========================================================================
// COURSE STRUCTURE
// =========================================================================
model Course {
  id             String       @id @default(cuid())
  organizationId String
  lecturerId     String
  title          String       @db.VarChar(200)
  description    String       @db.VarChar(2000)
  isPublished    Boolean      @default(false)
  status         CourseStatus @default(DRAFT)
  thumbnail      String?
  price          Float?
  duration       Int? // in minutes
  level          CourseLevel
  category       String?      @db.VarChar(100)
  tags           String[]
  metadata       Json?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Availability settings
  availableFrom  DateTime? // Course becomes available from this date
  availableUntil DateTime? // Course is available until this date
  enrollmentOpen Boolean   @default(true) // Whether new enrollments are accepted

  // Relations
  organization      Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  lecturer          User               @relation("CourseLecturer", fields: [lecturerId], references: [id])
  courseInstructors CourseInstructor[]
  subCourses        SubCourse[]
  lessons           Lesson[]
  enrollments       Enrollment[]
  quizzes           Quiz[]
  cohorts           Cohort[]
  plans             CoursePlanCourse[]
  groups            CourseGroup[]
  user              User?              @relation(fields: [userId], references: [id])
  userId            String?

  @@index([organizationId])
  @@index([lecturerId])
  @@index([isPublished])
  @@index([status])
  @@index([level])
  @@index([category])
  @@index([tags])
  @@index([createdAt(sort: Desc)])
  @@index([organizationId, isPublished])
  @@index([organizationId, status])
  @@index([organizationId, level, isPublished])
}

model CoursePlan {
  id             String               @id @default(cuid())
  organizationId String
  ownerId        String?
  name           String               @db.VarChar(200)
  slug           String               @unique
  description    String?              @db.VarChar(1000)
  visibility     CoursePlanVisibility @default(PRIVATE)
  isPublished    Boolean              @default(false)
  price          Float?
  tags           String[]
  metadata       Json?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  // Relations
  organization Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  owner        User?              @relation(fields: [ownerId], references: [id])
  courses      CoursePlanCourse[]

  @@index([organizationId])
  @@index([ownerId])
  @@index([visibility])
}

model CoursePlanCourse {
  id        String   @id @default(cuid())
  planId    String
  courseId  String
  addedById String?
  addedAt   DateTime @default(now())

  // Relations
  plan    CoursePlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  course  Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  addedBy User?      @relation(fields: [addedById], references: [id])

  @@unique([planId, courseId])
  @@index([courseId])
}

model CourseInstructor {
  id             String               @id @default(cuid())
  courseId       String
  organizationId String
  userId         String
  role           CourseInstructorRole @default(INSTRUCTOR)
  invitedById    String?
  permissions    Json?
  addedAt        DateTime             @default(now())
  removedAt      DateTime?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  // Relations
  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation("CourseInstructorMember", fields: [userId], references: [id])
  invitedBy    User?        @relation("CourseInstructorInvitedBy", fields: [invitedById], references: [id])

  @@unique([courseId, userId])
  @@index([organizationId])
  @@index([role])
}

model SubCourse {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  description    String   @db.VarChar(2000)
  courseId       String
  order          Int
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons      Lesson[]
  quizzes      Quiz[]

  @@index([courseId, order])
  @@index([organizationId])
  @@index([isPublished])
}

model Lesson {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  content        String
  videoUrl       String?
  attachments    String[]
  courseId       String?
  subCourseId    String?
  order          Int
  duration       Int?
  isPublished    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course?          @relation(fields: [courseId], references: [id], onDelete: Cascade)
  subCourse    SubCourse?       @relation(fields: [subCourseId], references: [id], onDelete: Cascade)
  progress     LessonProgress[]

  @@index([courseId, order])
  @@index([subCourseId, order])
  @@index([organizationId])
  @@index([isPublished])
}

model CourseGroup {
  id                  String          @id @default(cuid())
  organizationId      String
  courseId            String
  name                String          @db.VarChar(200)
  description         String?         @db.VarChar(1000)
  type                CourseGroupType @default(STUDY)
  isDefault           Boolean         @default(false)
  isArchived          Boolean         @default(false) // Soft delete - archived groups are hidden but preserved
  maxMembers          Int? // Optional limit on group size
  allowedSubCourseIds String[] // If empty, all subcourses accessible; if set, only these subcourses
  createdById         String?
  metadata            Json?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  // Relations
  organization Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course                  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdBy    User?                   @relation(fields: [createdById], references: [id])
  memberships  CourseGroupMembership[]

  @@index([organizationId])
  @@index([courseId])
  @@index([type])
}

model CourseGroupMembership {
  id           String   @id @default(cuid())
  groupId      String
  enrollmentId String
  studentId    String
  isLeader     Boolean  @default(false)
  joinedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  group      CourseGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  enrollment Enrollment  @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  student    User        @relation(fields: [studentId], references: [id])

  @@unique([groupId, studentId])
  @@index([enrollmentId])
  @@index([studentId])
}

// =========================================================================
// LEARNING EXPERIENCES
// =========================================================================
model Quiz {
  id             String   @id @default(cuid())
  organizationId String
  title          String   @db.VarChar(200)
  description    String   @db.VarChar(1000)
  courseId       String
  subCourseId    String? // Optional: if set, quiz belongs to subcourse; if null, it's a course-level quiz
  timeLimit      Int?
  maxAttempts    Int      @default(1)
  passingScore   Int      @default(70)
  isPublished    Boolean  @default(false)
  order          Int      @default(0) // Order within subcourse or course
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course       Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  subCourse    SubCourse?       @relation(fields: [subCourseId], references: [id], onDelete: Cascade)
  questions    Question[]
  submissions  QuizSubmission[]

  @@index([courseId])
  @@index([subCourseId])
  @@index([organizationId])
  @@index([isPublished])
  @@index([createdAt(sort: Desc)])
  @@index([organizationId, courseId, isPublished])
}

model Question {
  id            String       @id @default(cuid())
  quizId        String
  type          QuestionType
  question      String       @db.VarChar(1000)
  options       String[]
  correctAnswer String
  explanation   String?      @db.VarChar(1000)
  points        Int          @default(1)
  order         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId, order])
}

model QuizSubmission {
  id             String   @id @default(cuid())
  organizationId String
  quizId         String
  studentId      String
  answers        Json
  score          Float
  totalPoints    Float
  isPassed       Boolean
  timeSpent      Int
  submittedAt    DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  quiz         Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student      User         @relation(fields: [studentId], references: [id])

  @@index([quizId, studentId])
  @@index([studentId, submittedAt(sort: Desc)])
  @@index([quizId, submittedAt(sort: Desc)])
  @@index([studentId, isPassed])
  @@index([organizationId])
}

model Enrollment {
  id             String    @id @default(cuid())
  organizationId String
  studentId      String
  courseId       String
  cohortId       String?
  enrolledAt     DateTime  @default(now())
  progress       Int       @default(0)
  completedAt    DateTime?
  lastAccessedAt DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  organization           Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  student                User                    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course                 Course                  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  cohort                 Cohort?                 @relation(fields: [cohortId], references: [id])
  progressTracking       LessonProgress[]
  cohortEnrollment       CohortEnrollment?
  courseGroupMemberships CourseGroupMembership[]

  @@unique([studentId, courseId])
  @@index([organizationId])
  @@index([studentId])
  @@index([courseId])
  @@index([cohortId])
  @@index([enrolledAt(sort: Desc)])
  @@index([lastAccessedAt(sort: Desc)])
  @@index([progress])
  @@index([organizationId, studentId, progress])
  @@index([organizationId, courseId, enrolledAt(sort: Desc)])
}

model LessonProgress {
  id             String    @id @default(cuid())
  organizationId String
  enrollmentId   String
  lessonId       String
  isCompleted    Boolean   @default(false)
  timeSpent      Int       @default(0)
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  enrollment   Enrollment   @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  lesson       Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([enrollmentId, lessonId])
  @@index([organizationId])
  @@index([enrollmentId])
  @@index([lessonId])
  @@index([isCompleted])
  @@index([completedAt(sort: Desc)])
  @@index([enrollmentId, isCompleted])
}

model Cohort {
  id              String       @id @default(cuid())
  organizationId  String
  courseId        String
  name            String
  description     String?
  startDate       DateTime?
  endDate         DateTime?
  enrollmentLimit Int?
  status          CohortStatus @default(PLANNED)
  timezone        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  organization      Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  course            Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  cohortMemberships CohortEnrollment[]
  enrollments       Enrollment[]

  @@index([organizationId])
  @@index([courseId])
  @@index([status])
}

model CohortEnrollment {
  id           String   @id @default(cuid())
  cohortId     String
  enrollmentId String   @unique
  studentId    String
  joinedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  cohort     Cohort     @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id])

  @@unique([cohortId, studentId])
  @@index([cohortId])
  @@index([studentId])
}
